<!DOCTYPE html>
<html>
  <head>
    <title>Admin Dashboard - Uplo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <style>
      .admin-sidebar {
        min-height: calc(100vh - 4rem);
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <!-- Admin Header -->
    <header class="bg-white shadow-sm border-b">
      <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center">
            <%= render 'shared/admin_logo' %>
            <span class="ml-3 text-lg font-semibold text-gray-900">Admin Dashboard</span>
          </div>
          
          <div class="flex items-center space-x-4">
            <div class="text-sm text-gray-500">
              IP: <%= request.remote_ip %>
            </div>
            <%= link_to "View Site", root_path, 
                        class: "text-sm text-accent hover:text-accent-hover", 
                        target: "_blank" %>
            <%= button_to "Logout", session_path, method: :delete,
                          class: "bg-gray-100 hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium text-gray-700" %>
          </div>
        </div>
      </div>
    </header>

    <div class="flex">
      <!-- Sidebar Navigation -->
      <nav class="admin-sidebar w-64 bg-white shadow-sm border-r">
        <div class="p-4">
          <ul class="space-y-2">
            <li>
              <%= link_to admin_path, 
                          class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{'bg-accent text-black' if current_page?(admin_path)} #{'text-gray-700 hover:bg-gray-100' unless current_page?(admin_path)}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6a2 2 0 01-2 2H10a2 2 0 01-2-2V5z"></path>
                </svg>
                Dashboard
              <% end %>
            </li>
            
            <li>
              <%= link_to admin_users_path, 
                          class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{'bg-accent text-black' if current_page?(admin_users_path)} #{'text-gray-700 hover:bg-gray-100' unless current_page?(admin_users_path)}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
                Users
              <% end %>
            </li>
            
            <li>
              <%= link_to admin_photos_path, 
                          class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{'bg-accent text-black' if current_page?(admin_photos_path)} #{'text-gray-700 hover:bg-gray-100' unless current_page?(admin_photos_path)}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Photos
              <% end %>
            </li>
            
            <li>
              <%= link_to admin_system_path, 
                          class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{'bg-accent text-black' if current_page?(admin_system_path)} #{'text-gray-700 hover:bg-gray-100' unless current_page?(admin_system_path)}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                System
              <% end %>
            </li>
            
            <li>
              <%= link_to admin_analytics_path, 
                          class: "flex items-center px-3 py-2 text-sm font-medium rounded-md #{'bg-accent text-black' if current_page?(admin_analytics_path)} #{'text-gray-700 hover:bg-gray-100' unless current_page?(admin_analytics_path)}" do %>
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Analytics
              <% end %>
            </li>
          </ul>
          
          <!-- Quick Actions -->
          <div class="mt-8">
            <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">
              Quick Actions
            </h3>
            <ul class="space-y-1">
              <li>
                <button onclick="fixUserLimits()" 
                        class="w-full text-left px-3 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-md">
                  ðŸ”§ Fix User Limits
                </button>
              </li>
              <li>
                <button onclick="cleanupPhotos()" 
                        class="w-full text-left px-3 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-md">
                  ðŸ§¹ Cleanup Photos
                </button>
              </li>
              <li>
                <button onclick="refreshStats()" 
                        class="w-full text-left px-3 py-2 text-sm text-gray-600 hover:bg-gray-50 rounded-md">
                  ðŸ”„ Refresh Stats
                </button>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="flex-1 p-6">
        <% if notice %>
          <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded">
            <%= notice %>
          </div>
        <% end %>
        
        <% if alert %>
          <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
            <%= alert %>
          </div>
        <% end %>
        
        <%= yield %>
      </main>
    </div>

    <!-- Quick Action Modals -->
    <div id="quickActionModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
      <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <h3 class="text-lg font-medium text-gray-900 mb-4" id="modalTitle">Quick Action</h3>
          <div id="modalContent">
            <!-- Dynamic content -->
          </div>
          <div class="flex justify-end space-x-3 mt-6">
            <button onclick="closeModal()" 
                    class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400">
              Cancel
            </button>
            <button id="modalConfirm" 
                    class="px-4 py-2 bg-accent text-black rounded-md hover:bg-accent-hover">
              Confirm
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      function fixUserLimits() {
        document.getElementById('modalTitle').textContent = 'Fix User Limits';
        document.getElementById('modalContent').innerHTML = `
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">User Email</label>
            <input type="email" id="userEmail" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-md" 
                   placeholder="justin+hi@superdupr.com">
          </div>
          <p class="text-sm text-gray-600">This will reset monthly counters and add Pro subscription.</p>
        `;
        document.getElementById('modalConfirm').onclick = function() {
          const email = document.getElementById('userEmail').value;
          if (!email) {
            alert('Please enter an email address');
            return;
          }
          // Find user and fix limits - would need to implement this
          window.location.href = `/admin/users?search=${encodeURIComponent(email)}`;
        };
        showModal();
      }
      
      function cleanupPhotos() {
        document.getElementById('modalTitle').textContent = 'Cleanup Photos';
        document.getElementById('modalContent').innerHTML = `
          <div class="space-y-3">
            <label class="flex items-center">
              <input type="radio" name="cleanupType" value="unprocessed" class="mr-2">
              Delete unprocessed photos (older than 1 hour)
            </label>
            <label class="flex items-center">
              <input type="radio" name="cleanupType" value="test" class="mr-2">
              Delete test account photos
            </label>
            <label class="flex items-center">
              <input type="radio" name="cleanupType" value="reprocess" class="mr-2">
              Requeue failed photos for processing
            </label>
          </div>
        `;
        document.getElementById('modalConfirm').onclick = function() {
          const selected = document.querySelector('input[name="cleanupType"]:checked');
          if (!selected) {
            alert('Please select a cleanup option');
            return;
          }
          
          fetch('/admin/photos/cleanup', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            },
            body: JSON.stringify({ action_type: selected.value === 'unprocessed' ? 'delete_unprocessed' : selected.value === 'test' ? 'delete_test_photos' : 'reprocess_failed' })
          }).then(response => response.json())
            .then(data => {
              alert(data.message);
              if (data.success) window.location.reload();
            });
          
          closeModal();
        };
        showModal();
      }
      
      function refreshStats() {
        window.location.reload();
      }
      
      function showModal() {
        document.getElementById('quickActionModal').classList.remove('hidden');
      }
      
      function closeModal() {
        document.getElementById('quickActionModal').classList.add('hidden');
      }
      
      // Close modal when clicking outside
      document.getElementById('quickActionModal').addEventListener('click', function(e) {
        if (e.target === this) closeModal();
      });
    </script>
  </body>
</html>