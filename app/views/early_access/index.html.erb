<% content_for :title, "Get Early Access to Uplo - AI Social Media for Fitness Pros" %>
<% content_for :description, "Be the first to access Uplo's AI-powered social media tools for personal trainers. 50% launch discount for early supporters. Join the waitlist today!" %>
<% content_for :keywords, "Uplo early access, personal trainer software, AI social media tools, fitness marketing, gym social media, personal trainer app" %>
<% content_for :og_title, "Get Early Access to Uplo - 50% Launch Discount" %>
<% content_for :og_description, "Join 500+ fitness professionals on the waitlist. Be first to transform your social media with AI-powered content creation. Limited early access available." %>
<% content_for :og_type, "website" %>

<!-- Early Access Signup Page -->
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-black">
  <!-- Navigation -->
  <nav class="bg-transparent py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <%= render 'shared/logo', size: '1.75rem' %>
        <% end %>
        <%= link_to root_path, class: "text-gray-400 hover:text-white transition-colors" do %>
          ‚Üê Back to Home
        <% end %>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if flash[:notice] %>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-6">
      <div class="bg-accent text-black p-4 rounded-lg text-center font-semibold">
        <%= flash[:notice] %>
      </div>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-6">
      <div class="bg-red-500 text-white p-4 rounded-lg text-center font-semibold">
        <%= flash[:alert] %>
      </div>
    </div>
  <% end %>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6">
        Get Early Access to
        <span class="text-accent">Uplo</span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto mb-8">
        Join 500+ personal trainers on the waitlist. Be the first to transform your social media game 
        and start attracting more clients automatically.
      </p>
      
      <!-- Benefits -->
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <div class="bg-gray-800/50 rounded-lg p-6 backdrop-blur-sm">
          <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-black font-bold">1</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">First Access</h3>
          <p class="text-gray-400 text-sm">Be among the first to use Uplo when we launch</p>
        </div>
        <div class="bg-gray-800/50 rounded-lg p-6 backdrop-blur-sm">
          <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-black font-bold">50%</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Launch Discount</h3>
          <p class="text-gray-400 text-sm">50% off your first 3 months as an early supporter</p>
        </div>
        <div class="bg-gray-800/50 rounded-lg p-6 backdrop-blur-sm">
          <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-black font-bold">üéØ</span>
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">Shape the Product</h3>
          <p class="text-gray-400 text-sm">Your feedback will directly influence our development</p>
        </div>
      </div>
    </div>

    <!-- Signup Form -->
    <div class="max-w-md mx-auto">
      <div class="bg-white rounded-xl p-8 shadow-2xl">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Reserve Your Spot</h2>
        
        <%= form_with model: @signup, url: early_access_path, method: :post, local: true, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, required: true, placeholder: "Enter your full name", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" %>
          </div>

          <div>
            <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, required: true, placeholder: "your@email.com", 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" %>
          </div>

          <div>
            <%= form.label :business_type, "I am a...", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :business_type, 
                options_for_select([
                  ["Personal Trainer", "personal_trainer"],
                  ["Gym Owner", "gym_owner"], 
                  ["Fitness Coach", "fitness_coach"],
                  ["Yoga Instructor", "yoga_instructor"],
                  ["Other Fitness Professional", "other"]
                ]), 
                { prompt: "Select your role" },
                { required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" } %>
          </div>

          <div>
            <%= form.label :current_challenge, "What's your biggest social media challenge?", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :current_challenge, placeholder: "e.g., I struggle with writing captions...", rows: 3,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors resize-none" %>
          </div>

          <div class="flex items-start">
            <%= form.check_box :marketing_emails, class: "mt-1 mr-3", checked: true %>
            <%= form.label :marketing_emails, "I'd like to receive updates about Uplo and helpful social media tips for fitness professionals", 
                class: "text-sm text-gray-600" %>
          </div>

          <div class="flex items-start">
            <%= form.check_box :create_account, class: "mt-1 mr-3", checked: true, 
                onchange: "document.getElementById('password-field').classList.toggle('hidden', !this.checked)" %>
            <%= form.label :create_account, "Create my account now so I can start using Uplo immediately", 
                class: "text-sm text-gray-600 font-medium" %>
          </div>

          <div id="password-field" class="<%= params.dig(:early_access_signup, :create_account) == '0' ? 'hidden' : '' %>">
            <%= form.label :password, "Password (minimum 8 characters)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :password, placeholder: "Choose a secure password", minlength: 8,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" %>
          </div>

          <%= form.submit "Get Started with Uplo", 
              class: "w-full bg-accent text-black py-4 rounded-lg font-semibold text-lg hover:bg-accent-hover transition-colors" %>
        <% end %>

        <p class="text-xs text-gray-500 text-center mt-4">
          By signing up, you agree to our privacy policy. We'll never spam you or share your email.
        </p>
      </div>
    </div>

    <!-- Social Proof -->
    <div class="text-center mt-16">
      <p class="text-gray-400 mb-6">Join these fitness professionals already on the waitlist:</p>
      <div class="flex justify-center items-center space-x-8 text-gray-500">
        <div class="text-center">
          <div class="text-2xl font-bold text-white">500+</div>
          <div class="text-sm">Signups</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-white">50+</div>
          <div class="text-sm">Gym Owners</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-white">25</div>
          <div class="text-sm">Cities</div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>
