<!-- Onboarding Profile Form -->
<div class="min-h-screen bg-gradient-to-br from-gray-900 to-black">
  <!-- Navigation -->
  <nav class="bg-transparent py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <%= render 'shared/logo', size: '1.75rem' %>
        <div class="text-gray-400 text-sm">
          Step 2 of 3
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-white mb-4">
        Tell us about your fitness brand
      </h1>
      <p class="text-gray-300">
        This helps our AI create captions that perfectly match your voice and attract your ideal clients.
      </p>
    </div>

    <!-- Profile Form -->
    <div class="bg-white rounded-xl p-8 shadow-2xl">
      <%= form_with model: @user, url: onboarding_profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
        
        <!-- Error Messages -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <span class="text-red-400">‚ö†Ô∏è</span>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc space-y-1 pl-5">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Bio -->
        <div>
          <%= form.label :bio, "Tell us about yourself and your fitness business", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :bio, 
              placeholder: "e.g., I'm a certified personal trainer specializing in strength training for women. I help busy professionals build confidence through fitness...", 
              rows: 4,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors resize-none" %>
          <p class="text-xs text-gray-500 mt-1">This helps AI understand your unique expertise and personality</p>
        </div>

        <!-- Business Type -->
        <div>
          <%= form.label :business_type, "What best describes you?", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :business_type, 
              options_for_select([
                ["Personal Trainer", "personal_trainer"],
                ["Gym Owner", "gym_owner"],
                ["Fitness Coach", "fitness_coach"],
                ["Yoga Instructor", "yoga_instructor"],
                ["Nutritionist", "nutritionist"],
                ["Fitness Influencer", "fitness_influencer"],
                ["Other", "other"]
              ], @user.business_type), 
              { prompt: "Select your role" },
              { required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" } %>
        </div>

        <!-- Fitness Focus -->
        <div>
          <%= form.label :fitness_focus, "What's your primary fitness focus?", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :fitness_focus, 
              options_for_select([
                ["Strength Training", "strength_training"],
                ["Cardio & Endurance", "cardio"],
                ["Yoga & Mindfulness", "yoga"],
                ["CrossFit", "crossfit"],
                ["Bodybuilding", "bodybuilding"],
                ["Functional Fitness", "functional_fitness"],
                ["Weight Loss", "weight_loss"],
                ["General Fitness", "general_fitness"]
              ], @user.fitness_focus), 
              { prompt: "Select your focus area" },
              { required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" } %>
        </div>

        <!-- Target Audience -->
        <div>
          <%= form.label :target_audience, "Who do you primarily train or create content for?", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :target_audience, 
              options_for_select([
                ["Beginners", "beginners"],
                ["Intermediate", "intermediate"],
                ["Advanced Athletes", "advanced"],
                ["All Fitness Levels", "all_levels"],
                ["Women", "women"],
                ["Men", "men"],
                ["Seniors (50+)", "seniors"],
                ["Competitive Athletes", "athletes"]
              ], @user.target_audience), 
              { prompt: "Select your target audience" },
              { required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" } %>
        </div>

        <!-- Tone Preference -->
        <div>
          <%= form.label :tone_preference, "What tone do you prefer for your social media?", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :tone_preference, 
              options_for_select([
                ["Motivational & Inspiring", "motivational"],
                ["Educational & Informative", "educational"],
                ["Fun & Casual", "fun_casual"],
                ["Professional & Expert", "professional"],
                ["Inspiring & Uplifting", "inspiring"],
                ["Community-Focused", "community_focused"]
              ], @user.tone_preference), 
              { prompt: "Select your preferred tone" },
              { required: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-transparent outline-none transition-colors" } %>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= form.submit "Complete Setup & Start Creating", 
              class: "w-full bg-accent text-black py-4 rounded-lg font-semibold text-lg hover:bg-accent-hover transition-colors" %>
        </div>

      <% end %>

      <!-- Help Text -->
      <div class="mt-6 p-4 bg-gray-50 rounded-lg">
        <h3 class="text-sm font-medium text-gray-900 mb-2">üí° Why we ask this:</h3>
        <p class="text-sm text-gray-600">
          Our AI uses this information to create captions that sound authentically like you and resonate with your specific audience. 
          You can always update these preferences later in your profile settings.
        </p>
      </div>
    </div>
  </div>
</div>
