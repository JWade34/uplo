<!-- Modal Controller JavaScript -->
<script>
// Initialize modal when Turbo loads the page
function initUpgradeModal() {
  // Simple modal controller
  const modal = document.getElementById('upgrade-modal');
  if (!modal) return;
  
  const closeButtons = modal.querySelectorAll('[data-action*="modal#close"]');
  
  // Close modal function
  function closeModal() {
    modal.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }
  
  // Open modal function
  window.openUpgradeModal = function() {
    modal.classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
  };
  
  // Close button listeners
  closeButtons.forEach(button => {
    button.addEventListener('click', closeModal);
  });
  
  // Close on background click
  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      closeModal();
    }
  });
  
  // Close on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
      closeModal();
    }
  });
}

// Initialize on DOMContentLoaded (first page load)
document.addEventListener('DOMContentLoaded', initUpgradeModal);

// Initialize on Turbo load (subsequent navigations)
document.addEventListener('turbo:load', initUpgradeModal);

// Also reinitialize after Turbo renders (for form submissions and frame updates)
document.addEventListener('turbo:render', initUpgradeModal);
</script>