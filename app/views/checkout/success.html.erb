<!-- Payment Success Page with Enhanced UX -->
<div class="min-h-screen bg-gradient-to-br from-green-50 to-accent/10 flex items-center justify-center p-4">
  <div class="max-w-lg w-full">
    <% if @success_message %>
      <!-- Success State with Confetti Effect -->
      <div class="bg-white rounded-2xl shadow-2xl p-8 text-center relative overflow-hidden">
        <!-- Animated Background -->
        <div class="absolute inset-0 bg-gradient-to-r from-accent/5 to-green-50"></div>
        
        <div class="relative z-10">
          <!-- Success Animation -->
          <div class="mb-6">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-green-100 rounded-full animate-bounce">
              <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
          </div>
          
          <h1 class="text-3xl font-bold text-gray-900 mb-3">Welcome to Uplo Pro! ðŸŽ‰</h1>
          <p class="text-lg text-gray-600 mb-8">Your account has been upgraded successfully</p>
          
          <% if @subscription %>
            <!-- Subscription Details Card -->
            <div class="bg-gradient-to-r from-accent/20 to-green-100 rounded-xl p-5 mb-6 text-left">
              <div class="flex items-start justify-between mb-3">
                <div>
                  <h3 class="font-bold text-gray-900"><%= @subscription.plan_name %></h3>
                  <p class="text-2xl font-bold text-gray-900 mt-1"><%= @subscription.price_display %></p>
                </div>
                <span class="bg-green-500 text-white text-xs px-3 py-1 rounded-full font-semibold">ACTIVE</span>
              </div>
              
              <div class="space-y-2 text-sm text-gray-700">
                <% if @subscription.trial_active? %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Free trial ends: <%= @subscription.trial_end.strftime('%B %d, %Y') %></span>
                  </div>
                <% else %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span>Next billing: <%= @subscription.current_period_end.strftime('%B %d, %Y') %></span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- What's Next Section -->
          <div class="bg-gray-50 rounded-xl p-5 mb-6">
            <h4 class="font-semibold text-gray-900 mb-3">ðŸš€ What's Next?</h4>
            <div class="space-y-2 text-sm text-left text-gray-700">
              <div class="flex items-start">
                <span class="text-accent mr-2">1.</span>
                <span>Upload your best gym photos (unlimited!)</span>
              </div>
              <div class="flex items-start">
                <span class="text-accent mr-2">2.</span>
                <span>Get 3 AI-generated caption variations per photo</span>
              </div>
              <div class="flex items-start">
                <span class="text-accent mr-2">3.</span>
                <span>Track your performance with advanced analytics</span>
              </div>
              <div class="flex items-start">
                <span class="text-accent mr-2">4.</span>
                <span>Watch your engagement grow!</span>
              </div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="space-y-3">
            <%= link_to new_photo_path, class: "block w-full bg-accent text-black py-4 rounded-lg font-semibold text-lg hover:bg-accent-hover transition-all transform hover:scale-105 shadow-lg" do %>
              <span class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Upload Your First Pro Photo
              </span>
            <% end %>
            <%= link_to dashboard_path, class: "block w-full bg-white border-2 border-gray-200 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" do %>
              Go to Dashboard
            <% end %>
          </div>
          
          <!-- Trust & Support -->
          <div class="mt-8 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600">
              Need help getting started? Check out our 
              <a href="#" class="text-accent font-semibold hover:underline">Pro Quick Start Guide</a>
              or email <a href="mailto:support@getuplo.com" class="text-accent font-semibold hover:underline">support@getuplo.com</a>
            </p>
          </div>
        </div>
      </div>
      
    <% else %>
      <!-- Error State -->
      <div class="bg-white rounded-2xl shadow-2xl p-8 text-center">
        <div class="mb-6">
          <div class="inline-flex items-center justify-center w-20 h-20 bg-red-100 rounded-full">
            <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        
        <h1 class="text-2xl font-bold text-gray-900 mb-3">Payment Processing Issue</h1>
        <p class="text-gray-600 mb-6"><%= @error_message || 'We couldn\'t complete your payment. This might be a temporary issue.' %></p>
        
        <div class="bg-red-50 rounded-lg p-4 mb-6 text-left">
          <h4 class="font-semibold text-red-900 mb-2">Common issues:</h4>
          <ul class="text-sm text-red-700 space-y-1">
            <li>â€¢ Card declined by your bank</li>
            <li>â€¢ Insufficient funds</li>
            <li>â€¢ Incorrect card details</li>
            <li>â€¢ Network timeout</li>
          </ul>
        </div>
        
        <div class="space-y-3">
          <%= link_to pricing_path, class: "block w-full bg-accent text-black py-3 rounded-lg font-semibold hover:bg-accent-hover transition-colors" do %>
            Try Again with Different Card
          <% end %>
          <%= link_to "mailto:support@getuplo.com?subject=Payment Issue", class: "block w-full border border-gray-300 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors" do %>
            Contact Support
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-bounce {
    animation: bounce 2s infinite;
  }
</style>
